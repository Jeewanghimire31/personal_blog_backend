{
    "env": {
        "browser": true,
        "es2021": true
    },
    // "extends": [
    //     "eslint:recommended",
    //     "plugin:@typescript-eslint/recommended"
    // ],
    "extends":"airbnb",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "object-curly-newline": ["error", { "multiline": true, "consistent": true }],
        "indent": [
            "error",
            2,
            {
                "ignoreNodes":["PropertyDefination"]
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "import/no-unresolved": "off", 
        "import/extensions": "off" 
    }
}
